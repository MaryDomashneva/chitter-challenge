<ul>
  <% @posts.each do |post| %>
    <li><%= post.created_at.strftime("%m/%d/%Y %H:%M") %> <%= post.message %></li>
  <% end %>
</ul>

<form action='/posts' method='post'>
  <label for='message'> Message
    <input type='text' name='message' />
  </label>
  <input type='submit' value='Submit' />
</form>
